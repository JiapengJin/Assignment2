
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    @*<link rel="stylesheet" href="../layui/css/layui.css">
        <link rel="stylesheet" href="./index.css">*@
    <link href="~/Content/layui/css/layui.css" rel="stylesheet" />
    <link href="~/Content/UserDetail/index.css" rel="stylesheet" />
</head>

<body>
    <div class="layui-form" lay-filter="addForm" style="padding: 20px;">
        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label">账号</label>
                <div class="layui-input-inline">
                    <input name="UserName" lay-verify="required" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-inline">
                <label class="layui-form-label">姓名</label>
                <div class="layui-input-inline">
                    <input name="RealName" lay-verify="required" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-inline">
                <label class="layui-form-label">密码</label>
                <div class="layui-input-inline">
                    <input name="Pwd" lay-verify="required" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-inline">
                <label class="layui-form-label">权限</label>
                <div class="layui-input-inline">
                    <select name="Power" lay-filter="sex" lay-verify="required">
                        <option value=""></option>
                        <option value="超级管理员">超级管理员</option>
                        <option value="管理员">管理员</option>
                        <option value="普通用户">普通用户</option>
                    </select>
                </div>
            </div>

        </div>
        <div class="layui-form-item">
            <div class="layui-input-block" style="text-align: center;">
                <button type="submit" class="layui-btn btnSub" lay-submit="" lay-filter="sub">立即提交</button>
                <button class="layui-btn layui-btn-primary" onclick="parent.layer.close(parent.winObj)">取消</button>
            </div>
        </div>
    </div>
    @*<script src="../jquery/jquery.min.js"></script>
        <script src="../layui/layui.js"></script>
        <script src="./index.js"></script>*@
    <script src="~/Content/jquery/jquery.min.js"></script>
    <script src="~/Content/layui/layui.js"></script>
    <script src="~/Content/UserDetail/index.js"></script>
</body>

</html>